<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserActivity"
    android:weightSum="5">

    <TextView
        android:id="@+id/complete_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="완료"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/user_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="300dp"
            android:background="@drawable/background_rounding"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/user_id_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="User name" />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/chat_imageview"
            android:id="@+id/addphoto_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_profile_edit_icon" />

        <TextView
            android:layout_below="@id/addphoto_image"
            android:layout_toRightOf="@+id/chat_textview"
            android:id="@+id/addphoto_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="프로필 편집" />
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="120dp"
            android:id="@+id/chat_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_speach_bubble_icon" />

        <TextView
            android:layout_below="@id/chat_imageview"
            android:layout_marginLeft="120dp"
            android:id="@+id/chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1:1 채팅" />



        <ImageView
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/chat_imageview"
            android:id="@+id/call_Imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_call_icon" />

        <TextView
            android:layout_marginLeft="50dp"
            android:layout_below="@id/call_Imageview"
            android:layout_toRightOf="@+id/chat_textview"
            android:id="@+id/call_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="통화하기" />


    </RelativeLayout>
